@{
    ViewData["Title"] = "Purchase List";
}
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
<style>
    th i {
        font-size: 0.95rem;
    }

    th {
        white-space: nowrap;
        vertical-align: middle !important;
    }
</style>


<div class="container py-4">
    <h2 class="text-center mb-4">
        <i class="fas fa-file-invoice-dollar fa-lg text-primary me-2"></i> Purchase List
    </h2>

    <div class="d-flex justify-content-end mb-3">
        <a class="btn btn-primary" asp-controller="Purchase" asp-action="Index">
            <i class="fas fa-plus me-1"></i> New Purchase
        </a>
    </div>

    <div class="table-responsive">
        <table id="purTable" class="table table-striped table-bordered text-center w-100">
            <thead class="table-dark align-middle">
                <tr>
                    <th><i class="fas fa-fw fa-hashtag me-1"></i> ID</th>
                    <th><i class="fas fa-fw fa-industry me-1"></i> Supplier</th>
                    <th><i class="fas fa-fw fa-calendar-alt me-1"></i> Date</th>
                    <th><i class="fas fa-fw fa-money-bill-wave me-1"></i> Amount</th>
                    <th><i class="fas fa-fw fa-calendar-plus me-1"></i> Created At</th>
                    <th><i class="fas fa-fw fa-user-plus me-1"></i> Created By</th>
                    <th><i class="fas fa-fw fa-sliders-h me-1"></i> Actions</th>
                </tr>
            </thead>
            <tbody>

            </tbody>
        </table>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="exampleModalLabel">Purchase List Items</h5>
                <button type="button" class="btn-close" id="btnclose" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table id="puriTable" class="table table-striped table-bordered text-center w-100">
                        <thead class="table-dark align-middle">
                            <tr>
                                <th><i class="fas fa-hashtag me-1"></i> Id</th>
                                <th><i class="fas fa-capsules"></i> Medicine</th>
                                <th><i class="fas fa-sort-numeric-up"></i> Quantity</th>
                                <th><i class="fas fa-rupee-sign"></i> Selling Price</th>
                                <th><i class="fas fa-tools"></i> Actions</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="btnclose2" data-bs-dismiss="modal">
                    <i class="fas fa-times"></i> Cancel
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.js"></script>
    @* <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script> *@
    @* <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script> *@
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"></script>
	<script src="~/js/purchasefetch.js"></script>
}
