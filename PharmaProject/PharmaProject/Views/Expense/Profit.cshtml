@model PharmaProject.Models.ProfitDTO
@{
    ViewBag.Title = "Profit Calculator";
}

<h2>Profit Calculator</h2>

<form method="post">
    <div class="form-group">
        <label>Total Sales</label>
        <input name="totalSales" class="form-control" type="number" step="0.01" />
    </div>
    <div class="form-group">
        <label>Total Cost of Goods</label>
        <input name="totalCostOfGoods" class="form-control" type="number" step="0.01" />
    </div>
    <button class="btn btn-primary mt-2">Calculate</button>
</form>

@if (Model != null)
{
    <h3 class="mt-4">Profit Details</h3>
    <p><strong>Total Sales:</strong> @Model.TotalSales</p>
    <p><strong>Total Cost of Goods:</strong> @Model.TotalCostOfGoods</p>
    <p><strong>Total Expenses:</strong> @Model.TotalExpenses</p>
    <p><strong>Net Profit:</strong> @Model.NetProfit</p>
}
@if (ViewBag.Error != null)
{
    <p class="text-danger">@ViewBag.Error</p>
}