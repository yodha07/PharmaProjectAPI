@{
    Layout = null;
    var billNo = "BILL" + new Random().Next(1000, 9999);
    var date = DateTime.Now.ToString("dd-MM-yyyy");
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Print Bill</title>
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            margin: 40px;
            background: white;
        }

        .top-section {
            display: flex;
            justify-content: space-between;
            font-size: 18px;
            margin-bottom: 20px;
        }

        .top-inputs {
            display: flex;
            gap: 20px;
            margin-bottom: 20px;
        }

            .top-inputs input {
                padding: 6px;
                font-size: 16px;
                width: 200px;
            }

        table {
            width: 100%;
            border-collapse: collapse;
            font-size: 15px;
        }

        th, td {
            border: 1px solid #ccc;
            padding: 8px;
            text-align: center;
        }

        th {
            background: #009999;
            color: white;
        }

        .footer {
            margin-top: 30px;
            display: flex;
            justify-content: space-between;
            font-size: 18px;
        }

        .btn {
            background: #009999;
            color: white;
            padding: 10px 20px;
            font-size: 16px;
            border: none;
            cursor: pointer;
        }

            .btn:hover {
                background: #007777;
            }
    </style>
</head>
<body>
    <div class="top-section">
        <div>Bill No: <strong>@billNo</strong></div>
        <div>Date: <strong>@date</strong></div>
    </div>

    <div class="top-inputs">
        <input type="text" placeholder="Customer Name" />
        <input type="text" placeholder="Address" />
    </div>

    <table>
        <thead>
            <tr>
                <th>SR No</th>
                <th>Product</th>
                <th>Batch</th>
                <th>Strip</th>
                <th>MRP</th>
                <th>Disc %</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
            <!-- Static sample row; replace with loop later -->
            <tr>
                <td>1</td>
                <td>Paracetamol</td>
                <td>B001</td>
                <td>2</td>
                <td>20</td>
                <td>5</td>
                <td>38.00</td>
            </tr>
        </tbody>
    </table>

    <div class="footer">
        <div>Total: ₹38.00</div>
        <button class="btn">Save and Print</button>
    </div>
</body>
</html>
