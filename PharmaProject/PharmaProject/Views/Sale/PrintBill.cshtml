@using PharmaProject.Models
@using Newtonsoft.Json

@{
    Layout = null;
    var billNo = "BILL" + new Random().Next(1000, 9999);
    var date = DateTime.Now.ToString("dd-MM-yyyy");

    var json = TempData["PrintBillData"] as string ?? "[]";
    var items = JsonConvert.DeserializeObject<List<PharmaProject.Models.BillItemDto>>(json);
    var total = items.Sum(x => x.Amt);
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Print Bill</title>
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            margin: 40px;
            background: white;
        }

        .top-section {
            display: flex;
            justify-content: space-between;
            font-size: 18px;
            margin-bottom: 20px;
        }

        .top-inputs {
            display: flex;
            gap: 20px;
            margin-bottom: 20px;
        }

            .top-inputs input {
                padding: 6px;
                font-size: 16px;
                width: 200px;
            }

        table {
            width: 100%;
            border-collapse: collapse;
            font-size: 15px;
        }

        th, td {
            border: 1px solid #ccc;
            padding: 8px;
            text-align: center;
        }

        th {
            background: #009999;
            color: white;
        }

        .footer {
            margin-top: 30px;
            display: flex;
            justify-content: space-between;
            font-size: 18px;
            align-items: center;
        }

        .btn {
            background: #009999;
            color: white;
            padding: 10px 20px;
            font-size: 16px;
            border: none;
            cursor: pointer;
        }

            .btn:hover {
                background: #007777;
            }

        #qrcode {
            margin-top: 20px;
            text-align: center;
        }

        @@media print {
            .btn, #qrcode

        {
            display: none;
        }

        input {
            border: none;
            outline: none;
        }

        }
    </style>
</head>
<body>
    <div class="top-section">
        <div>Bill No: <strong>@billNo</strong></div>
        <div>Date: <strong>@date</strong></div>
    </div>

    <div class="top-inputs">
        <input type="text" placeholder="Customer Name" />
        <input type="text" placeholder="Address" />
    </div>

    <table>
        <thead>
            <tr>
                <th>SR No</th>
                <th>Product</th>
                <th>Batch</th>
                <th>Strip</th>
                <th>MRP</th>
                <th>Disc %</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in items)
            {
                <tr>
                    <td>@item.SrNo</td>
                    <td>@item.Product</td>
                    <td>@item.Batch</td>
                    <td>@item.Strip</td>
                    <td>@item.Mrp</td>
                    <td>@item.Disc</td>
                    <td>@item.Amt.ToString("0.00")</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="footer">
        <div>Total: ₹<span id="totalAmount">@total.ToString("0.00")</span></div>
        <div>
            <button class="btn" onclick="window.print()">Print Bill</button>
            <button class="btn" onclick="generateQR()">Pay Online</button>
        </div>
    </div>

    <div id="qrcode"></div>

    <!-- Include QRCode.js CDN -->
    <script src="https://cdn.jsdelivr.net/npm/qrcode/build/qrcode.min.js"></script>

    <script>
        function generateQR() {
            const amount = document.getElementById('totalAmount').innerText.trim();
            const upiID = "iamshakil658@ybl";
            const payeeName = "Test User";

            if (!amount || parseFloat(amount) <= 0) {
                alert("Invalid amount for payment.");
                return;
            }

            const upiURL = `upi://pay?pa=${upiID}&pn=${encodeURIComponent(payeeName)}&am=${amount}&cu=INR`;

            document.getElementById('qrcode').innerHTML = '';
            QRCode.toCanvas(document.createElement('canvas'), upiURL, { width: 250 }, function (err, canvas) {
                if (err) console.error(err);
                else document.getElementById('qrcode').appendChild(canvas);
            });
        }
    </script>
</body>
</html>
